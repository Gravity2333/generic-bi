{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": false,
    "declaration": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "pretty": true,
    "outDir": "./dist",
    "lib": ["esnext", "dom"],
    "types": ["jest", "node"],
    "esModuleInterop": true,
  },
  "include": ["./src/**/*", "index.ts"],
  "exclude": ["node_modules", "**/test", "dist"]
}
